<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="com.ipartek.formacion.multimodulo.entidades">
    	<class>com.ipartek.formacion.multimodulo.entidades.Producto</class>
    	<class>com.ipartek.formacion.multimodulo.entidades.Categoria</class>
       
        <properties>    
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/2827_tienda_jpa" />
            <property name="jakarta.persistence.jdbc.user" value="root" /> <!-- ${env.VARIABLE_DE_ENTORNO} -->
            <property name="jakarta.persistence.jdbc.password" value="1234" />

            <!-- Automatically export the schema -->
            <!-- <property name="jakarta.persistence.schema-generation.database.action" value="validate" /> -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
       </properties>

    </persistence-unit>

</persistence>
