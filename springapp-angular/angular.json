{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "springapp-angular": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/springapp-angular",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "springapp-angular:build:production"
            },
            "development": {
              "buildTarget": "springapp-angular:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component",
      "path": "src/app/componentes"
    },
    "@schematics/angular:directive": {
      "type": "directive",
      "path": "src/app/directivas"
    },
    "@schematics/angular:service": {
      "type": "service",
      "path": "src/app/servicios"
    },
    "@schematics/angular:guard": {
      "typeSeparator": ".",
      "path": "src/app/guards"
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": ".",
      "path": "src/app/interceptores"
    },
    "@schematics/angular:module": {
      "typeSeparator": ".",
      "path": "src/app/modulos"
    },
    "@schematics/angular:pipe": {
      "typeSeparator": ".",
      "path": "src/app/pipes"
    },
    "@schematics/angular:resolver": {
      "typeSeparator": ".",
      "path": "src/app/resolvers"
    }
  }
}
